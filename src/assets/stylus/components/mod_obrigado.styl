#mod_obrigado
	padding 200px 0
	cover('.././img/bg-pagamento.jpg')
	background-position left center
	max-height 100vh
	min-height 100vh
	@media mqmobile-md
		max-height 100%
		min-height 100%
		padding 0
	.link-pagseguro
		background-color $customred2
		padding 10px
		margin 20px	 0
		a
			color $customwhite1
			border 1px solid $customwhite1
			display block
			padding 15px
			text-align center
	.content
		text-align center
		padding 50px 15px
		color $customwhite1
		background-color alpha($custompurple3, 90%)
		margin 0 auto
		float none
		@media mqmobile-md
			padding 15px
	p
		padding 0
	h1
		text-transform uppercase
		margin-bottom 25px
		font-size 45px
		font-weight 600
		color $customyellow1
		@media mqmobile
			font-size 32px