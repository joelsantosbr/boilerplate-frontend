#form-mod-1
	padding 0
	background-color $customblack2
	color $customwhite1
	.header-material
		max-width 350px
		margin 0 auto
	.page-header
		padding 0 0 25px 0
		text-align center
		h1
			font-size 35px
			font-weight 600
		h2
			font-size 20px
			font-weight 100
		p
			font-size 14px
			font-weight 10
	.input-group--default
		margin-bottom 15px
	.form
		padding 80px 0
		background-repeat no-repeat
		background-position center
		background-size cover
		@media mqtablet
			min-height 100%
		label
			font-weight 400
		.submit
			text-align center
			input
				padding-right 50px
				padding-left 50px
		#box-content-1
			transition(.2s all ease-in)
			@media mqdesktop
				&.active
					margin-top -15px
					opacity .3 !important
	.form-page
		padding 80px 0
		background-repeat no-repeat
		background-position center
		background-size cover
		@media mqtablet
			min-height 100%
		#box-content-2
			transition(.2s all ease-in)
			@media mqdesktop
				&.active
					margin-top -15px
					opacity .3 !important