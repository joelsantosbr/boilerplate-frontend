#mod-abas
	.page-header
		text-align center
		margin-top 70px
		padding 100px 0
		h1
			font-size 35px
			font-weight 700
			color $customblack2
	hr
		margin .5px
		border 2px solid $customred1
	.nav-tabs
		border 0
		padding 0
		margin 0 auto
		a
			color $customblack2
			display table-cell
			vertical-align middle
			outline 0
			border-radius 0
			padding 0
			font-size 14px
			font-weight 700
			text-transform uppercase
			background-color transparent
			border 1px solid transparent
			transition(.1s all ease-in)
			&:visited,
			&:active,
			&:link
				background-color transparent
			@media mqmobile-md
				font-size 10px
		li
			position relative
			text-align center
			overflow auto
			background-color $customwhite1
			border 1px solid $customgray2
			padding 5px
			min-height 150px
			display table
			@media mqmobile
				min-height 100px
			img
				max-width 100%
			strong
				font-size 13px
				text-transform uppercase
			&.active,
			&:link,
			&:hover,
			&:visited,
			&:active
				color $customwhite1
				padding 5px
				border 0
				background-color $customred1
				a
					color $customwhite1
					padding 0
					border 1px solid transparent
					&:link,
					&:hover,
					&:visited,
					&:active
						background-color transparent
						border 1px solid transparent
						border-radius 0
						outline 0
					@media mqtablet
						border 1px solid transparent
						background-color $customred1
			.arrow-up
					opacity 1
				span
					color $white
					margin 5px
					background-color $customblue
			&:hover 
				border 1px solid $customred1
				background-color $customred2
				a
					border 1px solid transparent
					span
						color $customwhite1
			span
				display inline-block
				font-size 56px
				margin 0
				border-radius 50%
				padding 0
				border 5px solid transparent
				transition(.2s all ease-in)
				@media mqmobile-md
					font-size 30px
					border-radius 50%
					padding 0
					border 5px solid transparent
	.tab-content
		padding-bottom 100px
		font-size 15px
		overflow auto
		color $customblack4
		.href
			font-weight bold
			padding 5px 35px
			margin 25px
		&__icons
			text-align center
			margin-top 50px
			color $customblack1
			font-size 32px
			@media mqmobile-md
				font-size 38px
		&-image
			min-height 200px
			-webkit-background-size cover
			-moz-background-size    cover
			-o-background-size      cover
			background-size         cover
			background-repeat no-repeat
			background-position center
			@media mqtablet
				min-height 300px
		&-wrapper
			position relative
			font-size 15px
			background-color $customgray5
			color $customblack4
			height 100%
			min-height 200px
			@media mqmobile-md
				padding 25px 15px
				min-height 100%
			&:after
				content ''
				width 100%
			.content
				position absolute
				top 50%
				left 90px
				right 90px
				vertical-middle(-50%)
				@media mqmobile-md
					position static
					vertical-middle(0)
			img
				position absolute
				top 50%
				right -500px
				-webkit-transform translateY(-50%)
				-moz-transform translateY(-50%)
				transform translateY(-50%)
				max-width 580px
				@media mqtablet
					position relative
					right 0
					-webkit-transform translateY(0)
					-moz-transform translateY(0)
					transform translateY(0)
				@media mqtablet
					max-width 100%
			h1
				font-size 15px
				font-weight 700
				color $customblack4
				text-transform uppercase
				margin 15px 0
			p
				padding 0
				line-height 1.4		
		.page-header
			margin-top 30px
			.title
				font-size 16px
				font-weight 600
				color $gray2
				text-align left
				text-transform uppercase
				@media mqmobile-md
					text-align center
					margin-bottom 15px
		p
			text-align justify