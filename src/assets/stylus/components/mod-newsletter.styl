// NEWSLETTER
#mod-newsletter
	background-color $custompurple2
	background-attachment fixed
	padding 70px 15px
	color $customwhite1
	.newsletter
		position relative
		.page-header
			border 0
			padding 0
			margin 0
			@media mqtablet
				text-align center
				margin-bottom 15px
		h1
			font-size 25px
			font-weight 100
			margin 0
			padding 3px 0
		@media mqtablet
			.input-group
				text-align center
				margin-bottom 15px
		.content
			display block
	.btn
		font-weight 900
		font-size 15px
		letter-spacing .5px