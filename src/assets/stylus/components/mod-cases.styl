#mod-cases
	overflow hidden
	padding 80px 0
	background-color $customred3
	color $customwhite1
	min-height 400px
	.page-header
		text-align center
		padding-bottom 50px
		h1
			font-size 30px
			font-weight 600
	.carousel
		padding-top 25px
		@media mqtablet
			max-width 90%
			margin 0 auto
			padding-top 15px
	.carousel-inner
		overflow visible
		max-height 100%
	.case
		text-align center
	.indicators
		float left
		margin-top 60px
		text-align center
		@media mqtablet-md
			overflow auto
			display inline-block
			float none
			margin-top 10px
			margin-right 0
	.controls
		position relative
		z-index 99
		float right
		width 27px
		height 25px
		background-color transparent
		border 0
		border-radius 0
		outline 0
		clear both
		&.next
			margin-top 15px
			cover('../../assets/img/rightde.png')
		&.prev
			margin-right 30px
			cover('../../assets/img/leftde.png')
	.item
		.peoples
			text-align center
			img
				@extend .border-radius
		.statics
			color $white
		.title
			font-size 16px
			font-weight 600
			margin 0
			padding 25px 0 0 0
		.name
			margin 0
			font-size 14px
			font-weight 100
			text-transform uppercase
		.status,span
			margin 0
			font-size 14px
			font-weight 100
		.case
			margin-top 25px
			text-align center
			font-size 15px
			font-weight 100
			color $white
		a
			font-size 14px
			font-weight 600
			color $customwhite1
		.aspas
			&-1
				float left
				margin-top -25px
				margin-left -35px
				@media mqtablet
					margin-left 0
			&-2
				float right
				margin-right -35px
				@media mqtablet
					margin-right 0
			@media mqtablet
				max-width 25px