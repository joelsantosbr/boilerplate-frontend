.footer
	position relative
	z-index 1
	text-align center
	color $customwhite1
	font-size 13px	
	&__contact
		background-color $customblack3
		padding 30px 15px
	&__credits
		background-color $customred3
		padding 10px
	p 
		font-size 18px
	a
		font-size 13px
		color $customwhite1
.thankyou-form
	min-height 100vh
	img
		position fixed
		top 50%
		left 25%
		vertical-middle(-50%)
#contact3
	padding 80px 0
	border-top 2px solid $customred1
	border-bottom 2px solid $customred1
	background-color $customblack1
	color $customwhite1
	font-size 13px
	font-weight 100
	.page-header
		padding 0 0 25px 0
		strong
			font-size 13px
			font-weight 700
			color $customwhite1
	.contatos
		li
			display table
			position relative
			padding 0 0 15px 0
			vertical-align middle
			span
				display table-cell
				vertical-align middle
				font-size 22px
				padding 0 10px 0 0
	.form
		padding 0 0 15px 0
		.input-group
			margin-bottom 5px
			textarea
				min-height 100px
		.btn
			text-align center
			font-weight 700
.footer-2
	.footer__credits
		background-color $customblack1
		
#contact2
	padding 0
	background-color $customblack2
	color $customwhite1
	.header-material
		max-width 350px
		margin 0 auto
	.page-header
		padding 0 0 25px 0
		text-align center
		h1
			font-size 35px
			font-weight 600
		h2
			font-size 20px
			font-weight 100
		p
			font-size 14px
			font-weight 10
	.input-group--default
		margin-bottom 15px
	.form
		min-height 725px
		padding 80px 0
		background-image url('.././img/bg-contact1.jpg')
		background-repeat no-repeat
		background-position center
		background-size cover
		@media mqtablet
			min-height 100%
		label
			font-weight 400
		.submit
			text-align center
			input
				padding-right 50px
				padding-left 50px
		#box-content-1
			transition(.2s all ease-in)
			@media mqdesktop
				&.active
					margin-top -15px
					opacity .3 !important
	.form-page
		min-height 725px
		padding 80px 0
		background-image url('.././img/bg-contact2.jpg')
		background-repeat no-repeat
		background-position center
		background-size cover
		@media mqtablet
			min-height 100%
		#box-content-2
			transition(.2s all ease-in)
			@media mqdesktop
				&.active
					margin-top -15px
					opacity .3 !important
	
		